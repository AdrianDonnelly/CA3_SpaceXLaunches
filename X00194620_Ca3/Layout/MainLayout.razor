@inherits LayoutComponentBase
<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>

    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="Color.Inherit"
                       Edge="Edge.Start"
                       OnClick="@((e) => DrawerToggle())" />

        <MudSpacer />
        <MudLink Href="/" Class="cursor-pointer">
            <MudText Typo="Typo.h5" Class="text-white" >Exo-Planet Explorer</MudText>
        </MudLink>

        <MudSpacer />

        <MudIconButton Icon="@Icons.Material.Filled.MoreVert"
                       Color="Color.Inherit"
                       Edge="Edge.End" />
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5">Applications</MudText>
        </MudDrawerHeader>
        <MudDrawerContainer>
            <MudNavLink Href="/" Match="NavLinkMatch.All">
                Home
            </MudNavLink>
            <MudNavLink Href="/counter" Match="NavLinkMatch.All">
                Counter
            </MudNavLink>

        </MudDrawerContainer>
    </MudDrawer>

    <MudMainContent>
        @Body   
    </MudMainContent>

</MudLayout>

@code {
    bool _drawerOpen = true;
    void DrawerToggle() => _drawerOpen = !_drawerOpen;
}