@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>

    <!-- NAV BAR -->
    <MudAppBar Elevation="1" Color="Color.Primary">
        <!-- Drawer Toggle -->
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="Color.Inherit"
                       Edge="Edge.Start"
                       OnClick="@((e) => DrawerToggle())"/>

        <MudSpacer/>

        <!-- Title -->
        <MudLink Href="/" Class="cursor-pointer" Style="text-decoration:none;">
            <MudText Typo="Typo.h5" Style="color:white;">
                Planet Explorer
            </MudText>
        </MudLink>


        <MudSpacer/>

        <!-- Dark Mode Toggle -->
        <MudSwitch @bind-Value="_isDarkMode" Color="Color.Dark" Class="ma-4" T="bool"/>


        <!-- More Menu -->
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert"
                       Color="Color.Inherit"
                       Edge="Edge.End"/>
    </MudAppBar>

    <!-- SIDE DRAWER -->
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2" Color="Color.Primary" Variant="DrawerVariant.Temporary">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Color="Color.Inherit">Navigation</MudText>
        </MudDrawerHeader>

        <MudDrawerContainer>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">
                Home
            </MudNavLink>

            <MudNavLink Href="/counter" Icon="@Icons.Material.Filled.Calculate">
                Counter
            </MudNavLink>
        </MudDrawerContainer>
    </MudDrawer>

    <!-- PAGE BODY -->
    <MudMainContent>
        @Body
    </MudMainContent>

</MudLayout>


@code {
    private bool _drawerOpen = true;
    private bool _isDarkMode = false;

    private void DrawerToggle() => _drawerOpen = !_drawerOpen;
}
