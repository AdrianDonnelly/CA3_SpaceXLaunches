@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>

    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="Color.Inherit"
                       Edge="Edge.Start"
                       OnClick="@((e) => DrawerToggle())"/>

        <MudSpacer/>

        <MudLink Href="/" Class="cursor-pointer" Style="text-decoration:none;">
            <MudText Typo="Typo.h4" Style="color:white;">
                SpaceX Launches
            </MudText>
        </MudLink>


        <MudSpacer/>

        <MudTooltip Text="Toggle Dark Mode">
            <MudIconButton Icon="@(_isDarkMode ? Icons.Material.Filled.DarkMode : Icons.Material.Filled.LightMode)"
                           Color="Color.Inherit"
                           Edge="Edge.End"
                           OnClick="@(() => _isDarkMode = !_isDarkMode)"/>
        </MudTooltip>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" Elevation="2" Color="Color.Primary" Variant="DrawerVariant.Temporary">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Color="Color.Inherit">Navigation</MudText>
        </MudDrawerHeader>

        <MudDrawerContainer>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">
                Home
            </MudNavLink>

            <MudNavLink Href="/photos" Icon="@Icons.Material.Filled.PhotoLibrary">
                Launch Photos
            </MudNavLink>

            <MudNavLink Href="/statistics" Icon="@Icons.Material.Filled.BarChart">
                Statistics
            </MudNavLink>

        </MudDrawerContainer>
    </MudDrawer>

    <MudMainContent>
        @Body
    </MudMainContent>

</MudLayout>


@code {
    private bool _drawerOpen = true;
    private bool _isDarkMode = true;

    private void DrawerToggle() => _drawerOpen = !_drawerOpen;
}
